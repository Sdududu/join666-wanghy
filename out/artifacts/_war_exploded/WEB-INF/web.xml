<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--  filter-->
    <filter>
        <filter-name>crossOriginFilter</filter-name>
        <filter-class>com.summary.filter.CrossOriginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>crossOriginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>encodeFilter</filter-name>
        <filter-class>com.summary.filter.EncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--   老师功能阻拦-->
    <filter>
        <filter-name>teacherFilter</filter-name>
        <filter-class>com.summary.filter.TeacherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>teacherFilter</filter-name>
        <url-pattern>/teacher/*</url-pattern>
    </filter-mapping>
<!--   学生功能阻拦-->
    <filter>
        <filter-name>studentFilter</filter-name>
        <filter-class>com.summary.filter.StudentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>studentFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>

<!--   管理员功能阻拦-->
    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>com.summary.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
