    <!--controller-->
<!--登录注册-->
    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>com.summary.web.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
<!--    学生功能-->
    <servlet>
        <servlet-name>studentServlet</servlet-name>
        <servlet-class>com.summary.web.StudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentServlet</servlet-name>
        <url-pattern>/student/*</url-pattern>
    </servlet-mapping>
<!--    老师功能-->
    <servlet>
        <servlet-name>teacherServlet</servlet-name>
        <servlet-class>com.summary.web.TeacherController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherServlet</servlet-name>
        <url-pattern>/teacher/*</url-pattern>
    </servlet-mapping>
<!--    管理员功能-->
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>com.summary.web.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>com.summary.web.FileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/file/*</url-pattern>
    </servlet-mapping>




</web-app>

